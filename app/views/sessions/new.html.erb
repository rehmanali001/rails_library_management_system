<h1>Please Login!</h1><br><br>

<%= flash[:message] if flash[:message] %>

<%= form_for :user do |f| %>
    <%= f.label :username, 'Username:' %>
    <%= f.text_field :username, class: 'form-control', :style => 'width: 50%;' %>
    <br><br>
    <%= f.label :password, 'Password:' %>
    <%= f.password_field :password, class: 'form-control', :style => 'width: 50%;' %>
    <br><br>
  <%= f.submit "Log in", class: 'btn btn-primary' %>
<% end %>